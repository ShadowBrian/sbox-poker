@using Sandbox.UI;
@using System;
@namespace Poker.UI

<root class="pot gradient-right">

	<text class="name">Pot</text>
	<plabel class="value">@PotValue()</plabel>

</root>

@code
{
	string PotValue()
	{
		if (PokerGame.Instance is not PokerGame game)
			return "N/A";

		var potValue = game.Pot;
		return $"${potValue}";
	}

	protected override int BuildHash()
	{
		return HashCode.Combine(PotValue());
	}
}
